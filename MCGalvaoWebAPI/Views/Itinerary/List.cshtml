@model MCGalvaoWebAPI.Models.ItinerariesViewModel

<style>
    .btn {
        width: 75px;
    }
</style>

<h1>Destinos</h1>

<div class="card-deck">
    @foreach (var itinerary in Model.Itineraries)
    {
        var photoPath = "~/images/" + (itinerary.Photo ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@itinerary.Name</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary m-1">View</a>
                <a class="btn btn-primary m-1" asp-area="" asp-controller="Itinerary" asp-action="Edit" asp-route-id=@itinerary.Id>Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>